#!/bin/bash

LOG_OUTPUT=$(git log --pretty=format:$'%h %d %s' --abbrev-commit)
FILTER_OUTPUT=$(echo "$LOG_OUTPUT" | gum choose --cursor="â†’ " --cursor.foreground="#cba6f7" --header.foreground="#89b4fa" --header="Select commit to rebase from: ")
if [ -z "$FILTER_OUTPUT" ]; then
    echo "No commit selected"
    exit 1
fi

CUT_OUTPUT=$(echo "$FILTER_OUTPUT" | cut -d' ' -f1)
git rebase -i $CUT_OUTPUT

