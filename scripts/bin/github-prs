#!/bin/zsh

my_open_prs_repos="equinor/dot-web,equinor/warp-ui,equinor/subsurface-portal-web,equinor/pressure-db-ingestion-web,equinor/design-system"
pr_to_review_repos="equinor/dot-web,equinor/warp-ui,equinor/subsurface-portal-web,equinor/pressure-db-ingestion-web"

pr_to_review=$(gh search prs --state open --repo $pr_to_review_repos --json number --jq 'length' -- -author:"@me" -label:dependencies -label:"autorelease: pending")
my_open_prs=$(gh search prs --state open --author "@me" --repo $my_open_prs_repos --json number --jq 'length' -- -label:dependencies -label:"autorelease: pending")

echo "%{F#b4befe}%{F-} my $my_open_prs %{F#585b70}| %{F#b4befe}%{F-} review $pr_to_review"